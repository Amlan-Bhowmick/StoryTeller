@model IEnumerable<StoryTeller.Models.Topic>
    <div>
        <div class="row ">
            @foreach (var topic in Model)
            {
                <div class="card card-columns col-md-3 offset-1" style="width: 18rem">
                    <img class="card-img-top" src=@topic.imagePath alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@topic.topic</h5>
                        <p class="card-text">@topic.story</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            }
        </div>
    </div>